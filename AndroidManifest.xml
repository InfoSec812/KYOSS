<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.kyoss.demo"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="4" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application android:icon="@drawable/icon" android:label="@string/app_name" 
    	android:testOnly="false" 
    	android:allowClearUserData="true" android:debuggable="true" 
    	android:persistent="false" android:enabled="true" android:hasCode="true" 
    	android:allowBackup="false" android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity android:name=".Main"
                  android:label="@string/app_name" android:screenOrientation="sensor" android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:screenOrientation="sensor" android:launchMode="singleInstance" android:name="Configuration"></activity>
        <activity android:name="ExampleActivity"></activity>

    </application>
</manifest>